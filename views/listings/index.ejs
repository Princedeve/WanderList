<% layout("/layouts/boilerplate") %>
<body>
    <h2>All Listings</h2>
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
 <% for(list of allListings){ %>
    <a href="/listings/<%= list._id %>" class="listing-link">
    <div class="card col">
        <img src="<%= list.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
        <div class="card-img-overlay"><b>WanderList</b></div>
        <div class="card-body">
            <p class="card-text">
                <b><%= list.title %></b><br>
                <%= Number(list.price).toLocaleString("en-IN") %> / night
            </p>
        </div>
    </div>
    </a>
 <% } %>
    </div>
</body>